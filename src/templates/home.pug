			button(type="button" id="btn-menu" class="js-open-menu btn-menu")
				i.fa.fa-bars
			nav.menu.menu-mobile
				button(type="button" id="btn-close-menu" class="js-close-menu")
					i.fa.fa-times
				ul
					li
						a Home
					li
						a Sobre
					li.has-submenu
						a Serviços
