						a Contato

			nav.menu.menu-desktop
				ul
					li 
						a Home
					li 
						a Sobre
					li.has-submenu 
						a Serviços
						ul.submenu
							li 
								a Sub1
							li 
								a Sub2
							li 
								a Sub3
			.logo
				img(src="http://via.placeholder.com/100x100")/
			nav.menu.menu-aside.menu-desktop
				ul
					li 
						a(href="trabalhe-conosco.html") Trabalhe Conosco
					li 
						a(href="#") Contato
	.banner
		.banner__tv.js-slide
			div
				img(src="http://via.placeholder.com/1280x500")/
			div
				img(src="http://via.placeholder.com/1280x500")/
			div
				img(src="http://via.placeholder.com/1280x500")/

	//- Parallax
	.rellax
		section.thumbs
			.container.grid.grid--center.grid--column
				figure.thumbs__figure
					img(src="http://via.placeholder.com/200x200")/
					span hover #000
				figure.thumbs__figure
					img(src="http://via.placeholder.com/200x200")/
					span hover #000
				figure.thumbs__figure 
					img(src="http://via.placeholder.com/200x200")/
					span hover #000
				figure.thumbs__figure
					img(src="http://via.placeholder.com/200x200")/
					span hover #000
